<div class="row">
    <h1>Listado de documentales</h1>
    <div class="row">
        <div class="col-md-12">
            <%= link_to 'Nuevo documental', documentary_film_new_path, class: 'btn btn-primary' %>
        </div>
    </div>
    <% @documentary_films.each do |documentary_film| %>
        <div class="col-md-6">
            <div class="card mt-5">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">Nombre: <%= documentary_film.name %></li>
                    <li class="list-group-item">Sinopsis: <%= documentary_film.synopsis %></li>
                    <li class="list-group-item">Director: <%= documentary_film.director %></li>
                </ul>
            </div>
        </div>
    <% end %>
</div>
